<Window x:Class="CinemaWorkplace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaWorkplace"
        mc:Ignorable="d"
        Title="Workplace" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <TabControl>
            <TabItem Header="Sessions" FontSize="20">
                <StackPanel Orientation="Vertical">
                    <Button x:Name="btnAddSession" Content="Add sesion" />
                    <Button x:Name="btnDeleteSession" Content="Delete sesion" />
                    <DataGrid x:Name="dgSessions"  Height="250"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Tickets" FontSize="20">
                <StackPanel>
                <Button x:Name="btnSellTicket" Content="Sell tickets"/>
                <DataGrid x:Name="dgTickets"  Height="270"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Report" FontSize="20">
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
