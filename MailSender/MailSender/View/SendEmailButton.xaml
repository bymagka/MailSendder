<UserControl x:Class="MailSender.SendEmailButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailSender"
             mc:Ignorable="d" Height="24.34" Width="220">
    <Grid MouseLeftButtonDown="btnSend_Click">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnSend" Content="Send email" Grid.Column="1" Grid.ColumnSpan="1" HorizontalContentAlignment ="Center"/>
        <Image x:Name="imgSend" Source="/Images/SendEmailImg.png"  />
    </Grid>
</UserControl>
